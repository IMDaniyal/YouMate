<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout

        android:orientation="vertical"
        android:padding="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="206dp"
            android:layout_height="119dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:src="@drawable/applogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="REGISTRATION"
            android:textAlignment="center"
            android:textColor="@color/registerColr"
            android:textSize="18dp" />
        <EditText
            android:hint="UserName"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_user"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
             />
        <EditText
            android:hint="Age"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_age"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="date"
             />
        <EditText
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textEmailAddress" />



        <EditText
            android:hint="Password"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="8dp"
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="numberPassword" />

        <EditText
            android:hint="Phone No"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_phoneno"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="number" />


        
        <Button
            android:onClick="onClickRegister"
            android:backgroundTint="@color/registerColr"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:id="@+id/register_submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="REGISTER" />

        <TextView
            android:onClick="onClickRegister"
            android:layout_marginTop="10dp"
            android:textColor="@color/registerColr"
            android:textSize="18dp"
            android:id="@+id/register_link"
            android:textAlignment="center"
            android:text="Already Have Account?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="90dp"
            app:menu="@menu/botto_navigation">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>

</ScrollView>
