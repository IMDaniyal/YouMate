<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".Main2Activity">


    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="660dp"
      tools:context=".Main2Activity">

        <EditText
          android:id="@+id/edurl"
          android:layout_width="match_parent"
          android:layout_height="44dp"
          android:layout_marginTop="20dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="false"
          android:layout_alignParentStart="false"
          android:layout_alignParentTop="true"
          android:drawablePadding="10dp"
          android:drawableStart="@drawable/search"
          android:hint="search url e.g(google)"
          android:imeOptions="actionSearch"
          android:inputType="text"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
          android:id="@+id/layout1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/edurl">

            />


            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagefb"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="7dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/facebook1"/>

                <TextView
                  android:id="@+id/textfb"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2.1dp"
                  android:layout_gravity="bottom"
                  android:text="facebook"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginStart="20dp"
              android:layout_marginLeft="18dp">

                <ImageView
                  android:id="@+id/imageyoutube"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/youtube"/>

                <TextView
                  android:id="@+id/textyoutube"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="3dp"
                  android:layout_gravity="bottom"
                  android:text="Youtube"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imageinsta"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/instagram"/>

                <TextView
                  android:id="@+id/textinsta"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="13dp"
                  android:layout_gravity="bottom"
                  android:text="Insta"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="52dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagecri"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/cribuzz"/>

                <TextView
                  android:id="@+id/textcri"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="7dp"
                  android:layout_gravity="bottom"
                  android:text="cribuzz"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="52dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagewiki"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="10dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/wikipedia"/>

                <TextView
                  android:id="@+id/textwiki"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2.1dp"
                  android:layout_gravity="bottom"
                  android:text="Wikipedia"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
          android:id="@+id/linearLayout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_below="@id/layout1"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layout1">

            />


            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagegoogle"
                  android:layout_width="40dp"
                  android:layout_height="45dp"
                  android:layout_marginBottom="8dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/search1"/>

                <TextView
                  android:id="@+id/textgoogle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:layout_gravity="bottom"
                  android:text="Google"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagelink"
                  android:layout_width="40dp"
                  android:layout_height="44dp"
                  android:layout_marginBottom="6dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/linkedin"/>

                <TextView
                  android:id="@+id/textlink"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2dp"
                  android:layout_gravity="bottom"
                  android:text="Linkedin"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="50dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagebbc"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="8dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/bbc"/>

                <TextView
                  android:id="@+id/textbbc"
                  android:layout_width="61dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2dp"
                  android:layout_gravity="bottom"
                  android:text="BBC News"
                  android:textSize="10sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="52dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagegmail"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="7dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/gmail"/>

                <TextView
                  android:id="@+id/textgmail"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12dp"
                  android:layout_gravity="bottom"
                  android:text="Gmail"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
              android:layout_width="52dp"
              android:layout_height="57dp"
              android:layout_marginLeft="20dp">

                <ImageView
                  android:id="@+id/imagetwit"
                  android:layout_width="40dp"
                  android:layout_height="46dp"
                  android:layout_marginBottom="8dp"
                  android:layout_gravity="center"
                  app:srcCompat="@drawable/twitter"/>

                <TextView
                  android:id="@+id/texttwit"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="9dp"
                  android:layout_gravity="bottom"
                  android:text="twitter"
                  android:textSize="11sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          app:layout_constraintBottom_toTopOf="@+id/nav1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
          android:id="@+id/nav1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="16dp"
          android:layout_gravity="bottom"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:menu="@menu/botto_navigation">

        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
