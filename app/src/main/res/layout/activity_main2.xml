<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"
            tools:context=".Main2Activity">

            <EditText
                android:id="@+id/edurl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/search"
                android:drawablePadding="10dp"
                android:hint="search url e.g(google)"
                android:imeOptions="actionSearch"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edurl">

                />


                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagefb"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        app:srcCompat="@drawable/facebook1" />

                    <TextView
                        android:id="@+id/textfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2.1dp"
                        android:text="facebook"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:id="@+id/imageyoutube"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/youtube" />

                    <TextView
                        android:id="@+id/textyoutube"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:text="Youtube"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imageinsta"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/instagram" />

                    <TextView
                        android:id="@+id/textinsta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="13dp"
                        android:text="Insta"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagecri"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/cribuzz" />

                    <TextView
                        android:id="@+id/textcri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="7dp"
                        android:text="cribuzz"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagewiki"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/wikipedia" />

                    <TextView
                        android:id="@+id/textwiki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2.1dp"
                        android:text="Wikipedia"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1">

                />


                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagegoogle"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/search1" />

                    <TextView
                        android:id="@+id/textgoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="8dp"
                        android:text="Google"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagelink"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        app:srcCompat="@drawable/linkedin" />

                    <TextView
                        android:id="@+id/textlink"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2dp"
                        android:text="Linkedin"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagebbc"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/bbc" />

                    <TextView
                        android:id="@+id/textbbc"
                        android:layout_width="61dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2dp"
                        android:text="BBC News"
                        android:textSize="10sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagegmail"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        app:srcCompat="@drawable/gmail" />

                    <TextView
                        android:id="@+id/textgmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="12dp"
                        android:text="Gmail"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/imagetwit"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/twitter" />

                    <TextView
                        android:id="@+id/texttwit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="9dp"
                        android:text="twitter"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="395dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />





        </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/botto_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
