<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankTransfer"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reg_logo"
        android:layout_width="183dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="87dp"
        android:src="@drawable/bank" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Bank Transfer"
        android:textAlignment="center"
        android:textColor="@color/registerColr"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/register_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="20sp" />

    <EditText
        android:id="@+id/register_accountno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Account No"
        android:inputType="text"
        android:paddingLeft="20sp" />

    <EditText
        android:id="@+id/register_accountholdername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Account Holder Name"
        android:inputType="text"
        android:paddingLeft="20sp" />

    <EditText
        android:id="@+id/register_bankname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Bank Name"
        android:inputType="text"
        android:paddingLeft="20sp" />
    <Button
        android:onClick="onClickbank"
        android:backgroundTint="@color/registerColr"
        android:layout_marginTop="6dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:id="@+id/register_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Submit" />



</LinearLayout>