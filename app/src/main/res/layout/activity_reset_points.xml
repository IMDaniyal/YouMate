<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPoints"
    android:orientation="vertical">


  <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:title="Reset"
      android:background="@color/chip_text_color_light"
      app:titleTextColor="@color/colorWhite">

  </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayou"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/edittxt_circle_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <EditText
            android:id="@+id/tvpoi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_background"
            android:hint="Points"
            android:layout_marginTop="11dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:inputType="number"
            android:textColor="#639e42"
            android:textColorLink="#639e42" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayou1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittxt_circle_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <EditText
            android:id="@+id/tvlev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_background"
            android:hint="Level"
            android:layout_marginTop="11dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:inputType="number"
            android:textColor="#639e42"
            android:textColorLink="#639e42" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btrest"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittxt_circle_bg"
            android:onClick="resetClick"
            android:padding="0dp"
            android:text="Reset"
            android:textColor="#639e42"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btupdate"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittxt_circle_bg"
            android:padding="0dp"
            android:onClick="updateClick"
            android:text="Update"
            android:textColor="#639e42"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>