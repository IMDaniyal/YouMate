<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Hello,Sign In"
        android:titleTextColor="@color/colorWhite"
        android:background="@color/chip_text_color_light"

        tools:ignore="MissingConstraints,NewApi">

        </Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="610dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvprofile"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvpoint"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="My Point"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvproof"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="Payment Proof"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvhistory"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvhelp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="Help"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvsetting"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="Setting"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tvleaderboard"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:text="leaderboard"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
      android:id="@+id/setchannel"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="53dp"
      android:layout_margin="10dp"
      android:paddingLeft="15dp"
      android:fontFamily="sans-serif-thin"
      android:text="Channel _id"
      android:textColor="@color/black"
      android:textSize="25sp"/>


</LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav1"
        android:layout_gravity="bottom"
        app:menu="@menu/botto_navigation"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>