<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUser">

    <LinearLayout

        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/reg_logo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/applogo"
            />
        <TextView
            android:layout_marginTop="25dp"
            android:textColor="@color/registerColr"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Update User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:textSize="22sp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/txemail"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:hint="UserName"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_user"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            />
        <EditText
            android:hint="Age"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_age"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="date"
            />


        <EditText
            android:hint="Phone No"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_phoneno"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="number" />
        <EditText
            android:hint="Payment ID"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittxt_circle_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/register_paymentid"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textPhonetic"
            />

        <Button
            android:onClick="onClickRegister"
            android:backgroundTint="@color/registerColr"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:id="@+id/register_submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Update" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav1"
            android:layout_marginTop="121dp"
            android:layout_gravity="bottom"
            app:menu="@menu/botto_navigation"
            >

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>
</ScrollView>
